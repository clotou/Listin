<div class="item-quant">
  <% items.each do |item| %>
    <% if item.done !=true %>

      <div class="one-item row">
        <div class="list-flex-item">
        <% if item.user_id == current_user.id %>
          <%= link_to list_item_path(item), method: :delete,
                                            class: "delete-item",
                                            data: { confirm: "Delete #{item.title}?" } do %>
              <span class="button-delete">
                <i class="fas fa-trash-alt"></i>
              </span>
            <% end %>
          <% end %>
        </div>

    <% if item.user_id == current_user.id %>
      <div class="list-flex-item row text-item-trash">
        <div><%= item.title %></div>
        <div><%= item.quantity %></div>
      </div>
      <% else %>
      <div class="list-flex-item row text-item">
        <div><%= item.title %></div>
        <div><%= item.quantity %></div>
      </div>
    <% end %>

        <div class="list-flex-item">
            <%= link_to as_done_item_path(item), remote: true,
                                        method: :patch,
                                        class: "asdone-item" do %>
              <span class="button-caddie">
                <i class="fas fa-shopping-cart"></i>
              </span>
            <% end %>
        </div>
      </div>

    <% elsif item.done == true %>
    <div class="one-item row">

      <mark>
      <div class="list-flex-item row text-item">
          <div><%= item.title %></div>
          <div><%= item.quantity %></div>
      </div>
      </mark>

      <div class="list-flex-item">
        <%= link_to not_done_item_path(item), remote: true,
                                      method: :patch,
                                      class: "back-item-notdone",
                                      data: { confirm: "#{item.title} (#{item.quantity}) back in your list?" } do %>
            <span class="button-back-item">
              <i class="fas fa-undo"></i>
            </span>
          <% end %>
      </div>

    </div>
  <% end %>
  <% end %>
</div>




