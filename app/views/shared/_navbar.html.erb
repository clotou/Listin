<div class="navbar navbar-expand-sm navbar-light navbar-listin">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/clotou/image/upload/v1626160537/logo_vtd4zr.png" %>
    <% end %>

  <div >

    <% if user_signed_in?%>

      <% if current_user.avatar.attached? %>
      <%= cl_image_tag current_user.avatar.key, class:"avatar"%>



        <% else %>
          <i class='fas fa-user-circle avatar dropdown-toggle'></i>
        <% end %>
        <%= "<i class='fas fa-dot-circle dot-invite'></i>".html_safe if current_user.invites.select {|invite| invite.accepted.nil?}.count!=0%>

    <% else %>
      <i class='fas fa-user-circle avatar dropdown-toggle'></i>
    <% end %>

  </div>

</div>
